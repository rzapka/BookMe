@model BookMe.Application.Offer.Commands.CreateOffer.CreateOfferCommand

@{
    ViewData["Title"] = "Dodaj Nową Ofertę";
}

<div class="container mt-5 p-4 bg-light text-dark rounded" style="max-width: 700px;">
    <h3 class="mb-4 text-dark">Dodaj Nową Ofertę</h3>

    <form asp-action="Create" asp-controller="Offer" method="post">
        <input type="hidden" asp-for="ServiceId" value="@ViewBag.ServiceId" />
        <input type="hidden" asp-for="ServiceEncodedName" value="@ViewBag.ServiceEncodedName" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-4">
            <label asp-for="Name" class="control-label text-dark">Nazwa Oferty</label>
            <input type="text" asp-for="Name" class="form-control bg-white text-dark" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Duration" class="control-label text-dark">Czas trwania (minuty)</label>
            <input type="number" asp-for="Duration" class="form-control bg-white text-dark" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Price" class="control-label text-dark">Cena</label>
            <input type="number" step="0.01" asp-for="Price" class="form-control bg-white text-dark" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-dark btn-block">Zapisz</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
