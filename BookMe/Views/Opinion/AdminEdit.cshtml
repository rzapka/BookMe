@model BookMe.Application.Opinion.Commands.UpdateOpinion.UpdateOpinionCommand

@{
    ViewData["Title"] = "Edytuj Opinię";
}

<div class="container mt-5 bg-secondary text-white p-4 rounded">
    <h3 class="mb-4">Edytuj Opinię</h3>
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="AdminEditPost">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ServiceId" />
                <input type="hidden" asp-for="ServiceEncodedName" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="BookingId" />

                <div class="form-group">
                    <label asp-for="Rating" class="control-label">Ocena</label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Content" class="control-label">Treść</label>
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label">Pracownik</label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OfferId" class="control-label">Oferta</label>
                    <select asp-for="OfferId" class="form-control" asp-items="ViewBag.Offers"></select>
                    <span asp-validation-for="OfferId" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-dark">Zapisz</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
