@model BookMe.Application.Service.Commands.CreateService.CreateServiceCommand

@{
    ViewData["Title"] = "Dodaj Nowy Serwis";
}

<div class="container mt-5 bg-secondary text-white p-4 rounded">
    <h3 class="mb-4">Dodaj Nowy Serwis</h3>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div class="form-group mt-4">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="text-danger font-weight-bold">@error.ErrorMessage</div>
                    }
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nazwa Serwisu</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Opis</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceCategoryId" class="control-label">Kategoria</label>
                    <select asp-for="ServiceCategoryId" class="form-control">
                        <option value="">Inne</option>
                        @foreach (var category in ViewBag.ServiceCategories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ServiceCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">Adres URL obrazka</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <h4 class="mt-4">Dane Kontaktowe</h4>
                <div class="form-group">
                    <label asp-for="City" class="control-label">Miasto</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Street" class="control-label">Ulica</label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Numer Telefonu</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label">Kod Pocztowy</label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-dark">Zapisz</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
