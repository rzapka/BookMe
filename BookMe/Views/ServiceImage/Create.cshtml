@model BookMe.Application.ServiceImage.Commands.CreateServiceImage.CreateServiceImageCommand

@{
    ViewData["Title"] = "Dodaj Nowe Zdjęcie";
}

<div class="container mt-5 bg-secondary text-white p-4 rounded">
    <h3 class="mb-4">Dodaj Nowe Zdjęcie</h3>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" asp-route-encodedName="@ViewBag.EncodedName" method="post">
                <!-- Ukryte pole dla ServiceId -->
                <input type="hidden" asp-for="ServiceId" value="@ViewBag.ServiceId" />

                <div class="form-group">
                    <label asp-for="Url" class="control-label">URL Zdjęcia</label>
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-dark">Dodaj</button>
                    <a asp-action="Index" asp-route-encodedName="@ViewBag.EncodedName" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
