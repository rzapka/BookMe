@model BookMe.Application.ServiceCategory.Commands.CreateServiceCategory.CreateServiceCategoryCommand

@{
    ViewData["Title"] = "Dodaj Nową Kategorię";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="bg-secondary text-white p-4 rounded w-50">
        <h3 class="mb-4">Dodaj Nową Kategorię</h3>
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" placeholder="Wprowadź nazwę kategorii" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Adres URL Obrazu</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Wprowadź URL obrazu" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 text-center">
                <button type="submit" class="btn btn-dark">Zapisz</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}